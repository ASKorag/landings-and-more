include ../../atoms/button/button
include ../../molecules/ext-title/ext-title

mixin card(type, data)
  - var {title, subtitle, iconName, imgName, imgAlt, btnText} = data
  div(class=[attributes.class, 'card', `card--${type}`])
    div(class=['card__wrap', `card__wrap--${type}`])
      if type === 'service' || type === 'index'
        //svg(class=['card__icon', `card__icon--${type}`])
        //  use(xlink:href=require(`@icons/${iconName}.svg#root`))
        +ext-title('card', {title, subtitle}).card__titles
      else if type === 'advice'
        +ext-title('card', {title, subtitle}).card__titles
        img(src=require(`@images/${imgName}.jpg`) alt=imgAlt)
      else if type === 'contact'
        //svg(class=['card__icon', `card__icon--${type}`])
        //  use(xlink:href=`${path(iconUrl)}#root`)
        +ext-title('card', {title, subtitle}).card__titles
        +button(btnText, {shape: 'rect', color: 'sec'})
